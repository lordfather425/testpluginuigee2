{
  "manifest_version": 2,
  "name": "CarGurus Search",
  "description": "Search CarGurus for average listing price based on Facebook Marketplace listing",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/marketplace/*"],
      "js": ["content.js"]
    }
  ]
}
