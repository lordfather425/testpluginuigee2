{
  "manifest_version": 2,
  "name": "CarGurus Price Checker",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "CarGurus Price Checker"
  }
}
